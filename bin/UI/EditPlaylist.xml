
    <UserControl 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	mc:Ignorable="d" 
	d:DesignHeight="720" d:DesignWidth="1280">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="25*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="back" Grid.Column="0" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                    <Image Source="Image/Back.png"></Image>
                </Button>
                <Label Content="Chỉnh sửa danh sách phát" Grid.Column="1" FontFamily="Arial" FontSize="50" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="STT" Grid.Column="1" FontFamily="Arial" FontSize="30" Foreground="GhostWhite"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                    <Label Content="Tên" Grid.Column="2" FontFamily="Arial" FontSize="30" Foreground="GhostWhite"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                    <Label Content="Bắt đầu" Grid.Column="3" FontFamily="Arial" FontSize="30" Foreground="GhostWhite"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                    <Label Content="Kết thúc" Grid.Column="4" FontFamily="Arial" FontSize="30" Foreground="GhostWhite"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                    <Label Content="Chỉnh sửa" Grid.Column="5" FontFamily="Arial" FontSize="30" Foreground="GhostWhite"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                    <Button x:Name="addMedia" Margin="5" Grid.Column="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                        <Image Source="Image/Add.png"></Image>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="1" Grid.Column="1" FontFamily="Arial" FontSize="30" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="GhostWhite" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <Label Content="Test.mp3" Grid.Column="2" FontFamily="Arial" FontSize="30" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="GhostWhite" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <Label Content="05:02" Grid.Column="3" FontFamily="Arial" FontSize="30" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Background="GhostWhite" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <Viewbox Grid.Column="3" Width="30" Height="30" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <CheckBox IsChecked="True"/>
                    </Viewbox>
                    <Label Content="05:10" Grid.Column="4" FontFamily="Arial" FontSize="30" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Background="GhostWhite" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <Viewbox Grid.Column="4" Width="30" Height="30" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <CheckBox IsChecked="True"/>
                    </Viewbox>
                    <Button Margin="5" Grid.Column="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                        <Image Source="Image/Up.png"></Image>
                    </Button>
                    <Button Margin="5" Grid.Column="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                        <Image Source="Image/Down.png"></Image>
                    </Button>
                    <Button x:Name="editMusicEffect" Margin="5" Grid.Column="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                        <Image Source="Image/Edit.png"></Image>
                    </Button>
                    <Button Margin="5" Grid.Column="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                        <Image Source="Image/Delete.png"></Image>
                    </Button>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="2" Grid.Column="1" FontFamily="Arial" FontSize="30" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="GhostWhite" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <Label Content="Test.mp3" Grid.Column="2" FontFamily="Arial" FontSize="30" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="GhostWhite" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <Label Content="12:00" Grid.Column="3" FontFamily="Arial" FontSize="30" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Background="GhostWhite" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <Viewbox Grid.Column="3" Width="30" Height="30" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <CheckBox IsChecked="True"/>
                    </Viewbox>
                    <Label Content="12:10" Grid.Column="4" FontFamily="Arial" FontSize="30" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Background="GhostWhite" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <Viewbox Grid.Column="4" Width="30" Height="30" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <CheckBox IsChecked="True"/>
                    </Viewbox>
                    <Button Margin="5" Grid.Column="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                        <Image Source="Image/Up.png"></Image>
                    </Button>
                    <Button Margin="5" Grid.Column="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                        <Image Source="Image/Down.png"></Image>
                    </Button>
                    <Button Margin="5" Grid.Column="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                        <Image Source="Image/Edit.png"></Image>
                    </Button>
                    <Button Margin="5" Grid.Column="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                        <Image Source="Image/Delete.png"></Image>
                    </Button>
                </Grid>
                
            </Grid>
            <Button Grid.Row="2" Margin="0,0,50,0" HorizontalAlignment="Right" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                <Image Source="Image/Save.png"></Image>
            </Button>
        </Grid>
    </UserControl>

