
    <UserControl 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	mc:Ignorable="d" 
	d:DesignHeight="720" d:DesignWidth="1280">
	
        <Grid >
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="Image/Background.png"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="back" Grid.Column="0" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                    <Image Source="Image/Back.png"></Image>
                </Button>
                <Label x:Name="plcName" Content="Cấu hình PLC" Grid.Column="1" FontFamily="Arial" FontSize="50" Foreground="GhostWhite"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="ID" Grid.Column="1" FontFamily="Arial" FontSize="25" Foreground="GhostWhite"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                    <Label Content="Enable" Grid.Column="2" FontFamily="Arial" FontSize="25" Foreground="GhostWhite"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                    <Label Content="Name" Grid.Column="3" FontFamily="Arial" FontSize="25" Foreground="GhostWhite"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                    <Label Content="Address" Grid.Column="4" FontFamily="Arial" FontSize="25" Foreground="GhostWhite"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                    <Border Margin="5" Grid.Column="7" CornerRadius="20" BorderBrush="GhostWhite" BorderThickness="2" Padding="0" Background="DarkRed">
                        <Button x:Name="save" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" Foreground="GhostWhite" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                            <AccessText Text="Lưu" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" FontFamily="Arial" FontSize="25"/>
                        </Button>
                    </Border>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="devID1" Content="1" Grid.Column="1" FontFamily="Arial" FontSize="25" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="GhostWhite" FontWeight="Bold" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <Label Grid.Column="2" Background="GhostWhite" FontWeight="Bold" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <CheckBox x:Name="voaEnable1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" BorderBrush="DarkBlue" BorderThickness="1 1 1 1">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2" />
                        </CheckBox.LayoutTransform>
                    </CheckBox>
                    <TextBox x:Name="voaName1" Text="Valve 1" Grid.Column="3" FontFamily="Arial" FontSize="25" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="White" FontWeight="Bold" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <TextBox x:Name="opcAddress1" Text="ns=4;i=415" Grid.Column="4" FontFamily="Arial" FontSize="25" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="White" FontWeight="Bold" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <Border Margin="10,5,10,5" Grid.Column="5" CornerRadius="20" BorderBrush="GhostWhite" BorderThickness="2" Padding="0" Background="DarkRed">
                        <Button x:Name="onTest1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" Foreground="GhostWhite" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                            <AccessText Text="On" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" FontFamily="Arial" FontSize="25"/>
                        </Button>
                    </Border>
                    <Border Margin="10,5,10,5" Grid.Column="6" CornerRadius="20" BorderBrush="GhostWhite" BorderThickness="2" Padding="0" Background="DarkRed">
                        <Button x:Name="offTest1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" Foreground="GhostWhite" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                            <AccessText Text="Off" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" FontFamily="Arial" FontSize="25"/>
                        </Button>
                    </Border>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="devID2" Content="2" Grid.Column="1" FontFamily="Arial" FontSize="25" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="GhostWhite" FontWeight="Bold" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <Label Grid.Column="2" Background="GhostWhite" FontWeight="Bold" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <CheckBox x:Name="voaEnable2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" BorderBrush="DarkBlue" BorderThickness="1 1 1 1">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2" />
                        </CheckBox.LayoutTransform>
                    </CheckBox>
                    <TextBox x:Name="voaName2" Text="Valve 2" Grid.Column="3" FontFamily="Arial" FontSize="25" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="White" FontWeight="Bold" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <TextBox x:Name="opcAddress2" Text="ns=4;i=421" Grid.Column="4" FontFamily="Arial" FontSize="25" Foreground="DarkBlue"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="White" FontWeight="Bold" BorderBrush="DarkBlue" BorderThickness="1 1 1 1"/>
                    <Border Margin="10,5,10,5" Grid.Column="5" CornerRadius="20" BorderBrush="GhostWhite" BorderThickness="2" Padding="0" Background="DarkRed">
                        <Button x:Name="onTest2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" Foreground="GhostWhite" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                            <AccessText Text="On" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" FontFamily="Arial" FontSize="25"/>
                        </Button>
                    </Border>
                    <Border Margin="10,5,10,5" Grid.Column="6" CornerRadius="20" BorderBrush="GhostWhite" BorderThickness="2" Padding="0" Background="DarkRed">
                        <Button x:Name="offTest2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" Foreground="GhostWhite" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                            <AccessText Text="Off" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" FontFamily="Arial" FontSize="25"/>
                        </Button>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

	
	</UserControl>

