
    <UserControl 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	mc:Ignorable="d" 
	d:DesignHeight="720" d:DesignWidth="1280">
	
        <Grid >
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="Image/Background.png"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="back" Grid.Column="0" Margin="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                    <Image Source="Image/Back.png"></Image>
                </Button>
                <Label x:Name="plcName" Content="Cấu hình phần cứng" Grid.Column="1" FontFamily="Arial" FontSize="50" Foreground="GhostWhite"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Border Margin="15" Grid.Column="2" CornerRadius="20" BorderBrush="GhostWhite" BorderThickness="2" Padding="0" Background="DarkRed">
                    <Button x:Name="save" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" Foreground="GhostWhite" BorderThickness="0" Template="{StaticResource NoMouseOverButtonTemplate}">
                        <AccessText Text="Save" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" FontFamily="Arial" FontSize="25"/>
                    </Button>
                </Border>
            </Grid>
            <ScrollViewer Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Hidden">
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Cấu hình Van stepper - A" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="7" FontFamily="Arial" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="White" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                        <Label Content="Góc lớn nhất:" Grid.Row="1" Grid.Column="1" Margin="0,10,0,0" FontFamily="Arial" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="White" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1"/>
                        <TextBox x:Name="vsaMaxAngle" Text="" Grid.Row="1" Grid.Column="2" Margin="0,10,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="DarkBlue" Background="White" BorderBrush="Gray" BorderThickness="1" FontFamily="Arial" FontSize="20"/>
                        <Label Content="Vận tốc lớn nhất:" Grid.Row="1" Grid.Column="4" Margin="0,10,0,0" FontFamily="Arial" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="White" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1"/>
                        <TextBox x:Name="vsaMaxSpeed" Text="" Grid.Row="1" Grid.Column="5" Margin="0,10,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="DarkBlue" Background="White" BorderBrush="Gray" BorderThickness="1" FontFamily="Arial" FontSize="20"/>
                        <Label Content="Vị trí gốc:" Grid.Row="2" Grid.Column="1" Margin="0,10,0,0" FontFamily="Arial" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="White" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1"/>
                        <TextBox x:Name="vsaCoordAngle" Text="" Grid.Row="2" Grid.Column="2" Margin="0,10,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="DarkBlue" Background="White" BorderBrush="Gray" BorderThickness="1" FontFamily="Arial" FontSize="20"/>
                        <Label Content="Tỉ số truyền:" Grid.Row="2" Grid.Column="4" Margin="0,10,0,0" FontFamily="Arial" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="White" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1"/>
                        <TextBox x:Name="vsaRatio" Text="" Grid.Row="2" Grid.Column="5" Margin="0,10,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="DarkBlue" Background="White" BorderBrush="Gray" BorderThickness="1" FontFamily="Arial" FontSize="20"/>
                    </Grid>
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Cấu hình Van stepper - B" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="7" FontFamily="Arial" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="White" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                    </Grid>
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Cấu hình biến tần" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="7" FontFamily="Arial" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="White" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                    </Grid>
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Cấu hình LED RGB - A" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="7" FontFamily="Arial" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="White" Background="DarkBlue" FontWeight="Bold" BorderBrush="White" BorderThickness="1 1 1 5"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>

	
	</UserControl>

